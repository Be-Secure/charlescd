  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Test Debug",
      "runtimeExecutable": "npm",
      "smartStep": true,
      "runtimeArgs": [
        "run",
        "test:debug"
      ],
      "port": 9229,
      "skipFiles": [
        "<node_internals>/**"
      ]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Test Debug Current File",
      "runtimeExecutable": "npm",
      "smartStep": true,
      "runtimeArgs": [
        "run",
        "test:debug",
        "${file}"
      ],
      "port": 9229,
      "skipFiles": [
        "<node_internals>/**"
      ]
    },
  ]
}